<div class="row">
      <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-primary">
                  <div class="panel-heading">Direct Deposit</div>
                  <div class="panel-body">
                  <%= simple_form_for @account do |f| %>
                        <%= f.input :name %>
                        <%= f.input :type %>
                        <%= f.input :amount %>
      
                        <%= f.button :submit, class: 'btn btn-success' %>
                  <% end %> 
                  </div>
            </div>
      </div>
</div>