<div class="row">
    <h1></h1>
    <div class="col-md-4 col-md-offset-4">
        <button class="btn btn-primary btn-lg btn-block"><%= @account.name %></button>
        <button class="btn btn-default btn-lg btn-block"><%= @account.description %></button>
        <h3></h3>
            <div class = "col-md-3"></div>
            <div class="btn-group">
                <%= link_to 'Back', accounts_path, class: 'btn btn-info btn' %>
